<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlueBinFragment2"
    android:background="@drawable/background_fragment_bluebin2">

    <TextView
        android:id="@+id/blueBinTitle2"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/domine_regular"
        android:text="The"
        android:textAlignment="textStart"
        android:textColor="#3D3D3D"
        android:textSize="41sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blueBinTitle21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/domine_regular"
        android:text="Blue"
        android:textColor="#0039AC"
        android:textSize="41sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueBinTitle2" />

    <TextView
        android:id="@+id/blueBinTitle22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/domine_regular"
        android:text="Bin"
        android:textColor="#3D3D3D"
        android:textSize="41sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueBinTitle21" />

    <ImageView
        android:id="@+id/blueBinImage2"
        android:layout_width="247dp"
        android:layout_height="315dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="148dp"
        android:src="@drawable/fragment_bluebin2_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/blueBinSubtitle2"
        android:layout_width="327dp"
        android:layout_height="160dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="65dp"
        android:fontFamily="@font/figtree"
        android:text="The blue recycling bin is designated for recyclable materials like paper, cardboard, plastic bottles, aluminum cans, and glass containers. It helps reduce waste in landfills and promotes sustainable resource use. Make sure to rinse containers and avoid placing food waste or non-recyclables in the bin."
        android:textAlignment="textStart"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blueBinImage2"
        app:layout_constraintVertical_bias="0.813" />

    <!-- Page Indicator -->
    <ImageView
        android:id="@+id/blueBinPageIndicator2"
        android:layout_width="113dp"
        android:layout_height="11dp"
        android:layout_marginStart="117dp"
        android:layout_marginEnd="117dp"
        android:src="@drawable/bluebin2_dotted_pagenavigator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
