<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBECA2">

    <!-- Image at the top -->
    <ImageView
        android:id="@+id/resource_image"
        android:layout_width="414dp"
        android:layout_height="461dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header Text -->
    <TextView
        android:id="@+id/resource_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semibold"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:text="Reduce Food Waste"
        android:textColor="#3D3D3D"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resource_image" />

    <!-- Post Date -->
    <TextView
        android:id="@+id/resource_post_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/inter"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Posted on 18 March 2024"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resource_header" />

    <!-- Upvote Button -->

    <!-- Description Text -->

    <ImageView
        android:id="@+id/upvoteButton"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:clickable="true"
        android:contentDescription="Upvote"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resource_image"
        app:srcCompat="@drawable/ic_upvote" />

    <!-- Upvote Count -->
    <TextView
        android:id="@+id/resource_upvote_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter"
        android:text="0"
        android:textColor="#3D3D3D"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/upvoteButton"
        app:layout_constraintTop_toBottomOf="@id/resource_image" />

    <TextView
        android:id="@+id/resource_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/figtree"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Reducing food waste helps conserve resources, minimize environmental impact, and save money. By planning meals, storing food properly, and composting leftovers, you can make a positive impact on the planet."
        android:textColor="#3D3D3D"
        android:textSize="16.5sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resource_post_date" />

    <!-- Read More Link -->
    <TextView
        android:id="@+id/ReadMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:contentDescription="Read More"
        android:focusable="true"
        android:fontFamily="@font/figtree"
        android:foreground="?attr/selectableItemBackground"
        android:text="Read More"
        android:textColor="#3578FF"
        android:textSize="16.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resource_description" />

    <!-- Back Button -->
    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="31dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back" />

</androidx.constraintlayout.widget.ConstraintLayout>
