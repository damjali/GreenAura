<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DBECA2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/backButtongreen"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_margin="16dp"
            android:clickable="true"
            android:contentDescription="Back Button"
            android:focusable="true"
            android:src="@drawable/backbuttongreen" />

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Report Status"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/According"
            android:layout_width="246dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Local authorities have been notified. Your details remain confidential. "
            android:textColor="#3D3D3D"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="250dp"
            android:layout_height="82dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/progress" />

        <TextView
            android:id="@+id/the2024"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Type"
            android:textColor="#3D3D3D"
            android:textSize="13sp" />


        <androidx.cardview.widget.CardView
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/typeDatabase"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="12dp"
                android:background="@android:color/white"
                android:fontFamily="@font/open_sans_regular"
                android:text="fetch dari database"
                android:textColor="#436A0D"
                android:textColorHint="#050505"
                android:textSize="13sp" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/incident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Incident Location"
            android:textColor="#3D3D3D"
            android:textSize="13sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="184dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="12dp">
        <TextView
            android:id="@+id/incidentdatabase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="fetch dari database"
            android:textColor="#436A0D"
            android:textColorHint="#000000"
            android:background="@android:color/white"
            android:textSize="13sp" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Date"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_gravity=""
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:text="Date"
                android:textColor="#000000"
                android:textColorHint="#000000" />

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:text="Time you witness the Incident"
                android:textColor="#000000"
                android:textColorHint="#040404" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="375dp"
            android:layout_height="24dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="12dp">
            <TextView
                android:id="@+id/DateDatabase"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:layout_gravity=""
                android:layout_marginLeft="6dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:text="fetch dari database"
                android:background="@android:color/white"
                android:textColor="#436A0D"
                android:textColorHint="#050505" />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_marginLeft="18dp">

            <TextView
                android:id="@+id/TimeDatabase"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:fontFamily="@font/open_sans_regular"
                android:text="fetch dari database"
                android:textColor="#436A0D"
                android:background="@android:color/white"
                android:textColorHint="#040404" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Description"
            android:textColor="#3D3D3D"
            android:textSize="15sp" />
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_marginLeft="12dp">

            <TextView
                android:id="@+id/DescriptionDatabase"
                android:layout_width="380dp"
                android:layout_height="91dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/white"
                android:fontFamily="@font/open_sans_regular"
                android:text="Fetch from database"
                android:textColor="#436A0D"
                android:textColorHint="#050505"
                android:textSize="15sp" />
    </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/UploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="12dp"
            android:fontFamily="@font/open_sans_regular"
            android:text="Upload Photo/Video Link"
            android:textColor="#3D3D3D"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/UploadDatabase"
            android:layout_width="375dp"
            android:layout_height="422dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            android:layout_marginTop="4dp"
            android:padding="0dp"
            android:background="@android:color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/progress" />

    </LinearLayout>
</ScrollView>
