<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E7F6D5"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Redeemed Voucher Item -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:layout_marginBottom="8dp"
            android:elevation="2dp"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false">

            <!-- Voucher Logo -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/grablogo_round"
                android:scaleType="centerCrop"
                android:layout_marginRight="12dp"
                android:background="@drawable/circle_background" />

            <!-- Voucher Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/AuraPointsGained"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:textStyle="bold"
                    android:text="Grab RM 50 Voucher"
                    android:textSize="16sp"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/goalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="Claimed on 01/01/2025"
                    android:textColor="#757575"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Points Spent -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="-10"
                android:textSize="20sp"
                android:textColor="#FF0000"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Add more redeemed voucher items as needed -->
        <!-- Copy the above LinearLayout and adjust the content -->
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
