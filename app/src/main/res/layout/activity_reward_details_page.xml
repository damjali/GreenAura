<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:backgroundTint="#F0F8E2"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Available Aura -->
        <TextView
            android:id="@+id/available_aura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available Aura"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#4CAF50"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/available_auraPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="48sp"
            android:textColor="#2E7D32"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="24dp" />

        <!-- Logo -->
        <ImageView
            android:id="@+id/reward_logo"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:contentDescription="Reward Logo"
            android:src="@mipmap/grablogo"
            android:layout_marginBottom="24dp" />

        <!-- Reward Description -->
        <TextView
            android:id="@+id/reward_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RM18 Zoo Negara eVoucher"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/reward_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The reward will be emailed to you within 10 working days by our rewards partner."
            android:textSize="14sp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp"
            android:textColor="#757575"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Aura Cost -->
        <TextView
            android:id="@+id/reward_AuraCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1200 Aura"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E53935"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginBottom="32dp" />

        <!-- Footer Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:paddingHorizontal="32dp"
                android:text="Cancel"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#4CAF50"
                app:strokeWidth="2dp"
                android:textColor="#4CAF50"
                app:cornerRadius="25dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/redeem_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="32dp"
                android:text="Redeem"
                style="@style/Widget.MaterialComponents.Button"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                app:cornerRadius="25dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
